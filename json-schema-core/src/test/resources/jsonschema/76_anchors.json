{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/person-schema",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "https://example.com/schemas/person-schema#personName"
    },
    "age": { "$ref": "#personAge" }
  },
  "required": ["name", "age"],

  "$defs": {
    "name": {
      "type": "array",
      "items": {
        "$anchor": "personName",
        "type": "string",
        "minLength": 1,
        "description": "The full name of the person."
      }
    },
    "age": {
      "$anchor": "personAge",
      "type": "integer",
      "minimum": 0,
      "description": "Age must be a non-negative integer."
    }
  }
}
