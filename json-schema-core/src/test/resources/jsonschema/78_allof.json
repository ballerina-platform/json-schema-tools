{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Person",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      },
      "required": ["name"]
    },
    {
      "type": "object",
      "properties": {
        "age": { "type": "integer", "minimum": 0 }
      },
      "required": ["age"]
    }
  ]
}
