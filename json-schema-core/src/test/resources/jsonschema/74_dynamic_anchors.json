{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/org-chart",
  "$dynamicAnchor": "entity",

  "type": "object",
  "properties": {
    "entity_type": {
      "type": "string",
      "enum": ["Department", "Team", "Person"],
      "description": "The type of entity in the organization."
    },
    "name": {
      "type": "string",
      "description": "The name of the entity."
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": { "type": "string", "format": "date" },
        "active": { "type": "boolean" }
      }
    },
    "members": {
      "type": "array",
      "description": "List of members or sub-units under this entity.",
      "items": {
        "$dynamicRef": "#entity"
      }
    }
  },
  "required": ["entity_type", "name"]
}
